{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [ "eslint:recommended", "plugin:react/recommended" ],
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
          },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
	"rules": {
		"brace-style": [
			"error",
			"stroustrup",
			{
				"allowSingleLine": true
			}
		],
		"indent": [
			2,
			"tab"
		],
		"quotes": [
			2,
			"single",
			"avoid-escape"
		],
		"semi": [
			2,
			"always"
		],
		"func-call-spacing": [
			"error",
			"never"
		],
		"space-before-function-paren": [
			"error",
			"always"
		],
		"newline-per-chained-call": [
			"error",
			{
				"ignoreChainWithDepth": 3
			}
		],
		"no-undef": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-unused-vars": 1,
		"no-trailing-spaces": 2,
		"no-shadow": 2,
		"eol-last": 1,
		"no-console": 1,
		"comma-dangle": 0,
		"no-cond-assign": 0
	}
}
